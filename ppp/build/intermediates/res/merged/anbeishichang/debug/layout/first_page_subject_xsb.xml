<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <!-- 新手标系列 -->
    <RelativeLayout
        android:id="@+id/first_page_subject_xsb_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_278dp"
            android:scaleType="fitCenter"
            android:src="@drawable/first_page_fragment_rate_bg"/>

    </RelativeLayout>

    <Button
        android:id="@+id/first_page_subject_xsb_bidBtn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_40dp"
        android:layout_marginBottom="@dimen/common_measure_10dp"
        android:layout_marginLeft="@dimen/common_measure_40dp"
        android:layout_marginRight="@dimen/common_measure_40dp"
        android:background="@drawable/long_red_btn_selector"
        android:text="立即投资"
        android:textColor="@color/white"
        android:textSize="@dimen/common_measure_22dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/first_page_fragment_img1"
            android:layout_width="@dimen/common_measure_14dp"
            android:layout_height="@dimen/common_measure_17dp"
            android:layout_centerVertical="true"
            android:src="@drawable/prompt_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:layout_toRightOf="@+id/first_page_fragment_img1"
            android:text="账户资金安全由太平洋保险100%承保"
            android:textColor="@color/gray2"
            android:textSize="@dimen/common_measure_18dp" />
    </RelativeLayout>
    
</LinearLayout>
