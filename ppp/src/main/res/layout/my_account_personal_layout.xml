<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_account_personal_scrolview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_250dp"
            android:background="@drawable/my_account_personal_top_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common_measure_20dp"
            android:paddingRight="@dimen/common_measure_20dp">

            <TextView
                android:id="@+id/my_account_personal_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_5dp"
                android:gravity="left"
                android:text="您好！尊敬的元立方用户"
                android:textColor="@color/white"
                android:textSize="@dimen/common_measure_18dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/my_account_personal_headimg"
                android:layout_width="@dimen/common_measure_88dp"
                android:layout_height="@dimen/common_measure_88dp"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:layout_marginBottom="@dimen/common_measure_10dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/my_account_personal_nor_headlogo"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/my_account_personal_phone_img"
                    android:layout_width="@dimen/common_measure_25dp"
                    android:layout_height="@dimen/common_measure_24dp"
                    android:layout_toLeftOf="@+id/my_account_personal_idcard_img"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_account_personal_phone_logo"/>

                <ImageView
                    android:id="@+id/my_account_personal_idcard_img"
                    android:layout_width="@dimen/common_measure_25dp"
                    android:layout_height="@dimen/common_measure_24dp"
                    android:layout_marginLeft="@dimen/common_measure_10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_account_personal_idcard_logo"/>

                <ImageView
                    android:id="@+id/my_account_personal_bankcard_img"
                    android:layout_width="@dimen/common_measure_25dp"
                    android:layout_height="@dimen/common_measure_24dp"
                    android:layout_marginRight="@dimen/common_measure_10dp"
                    android:layout_toRightOf="@+id/my_account_personal_idcard_img"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_account_personal_bankcard_logo"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/common_measure_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/common_measure_18dp"
                    android:textColorHint="@color/white"
                    android:text="资产总额："/>

                <TextView
                    android:id="@+id/my_account_personal_totalmoney_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/common_measure_20dp"
                    android:textColorHint="@color/white"
                    android:textStyle="bold"
                    android:text="0.00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/common_measure_18dp"
                    android:textColorHint="@color/white"
                    android:text="元"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textSize="@dimen/common_measure_18dp"
                    android:textColorHint="@color/white"
                    android:text=">"/>

            </LinearLayout>

         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_80dp"
            android:paddingLeft="@dimen/common_measure_20dp"
            android:paddingRight="@dimen/common_measure_20dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="账户余额"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_18dp" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_account_personal_balancemoney_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/common_measure_18dp"
                        android:textColorHint="@color/black"
                        android:textStyle="bold"
                        android:text="0.00"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/common_measure_18dp"
                        android:textColorHint="@color/black"
                        android:text="元"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/my_account_personal_withdraw_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="提现"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp"/>

                <View
                    android:layout_width="@dimen/common_measure_1dp"
                    android:layout_height="@dimen/common_measure_30dp"
                    android:layout_marginLeft="@dimen/common_measure_6dp"
                    android:layout_marginRight="@dimen/common_measure_6dp"
                    android:background="@color/gray1"/>

                <Button
                    android:id="@+id/my_account_personal_recharge_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="充值"
                    android:textColor="@color/common_topbar_bg_color"
                    android:textSize="@dimen/common_measure_18dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_account_personal_unverify_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_50dp"
            android:paddingLeft="@dimen/common_measure_20dp"
            android:paddingRight="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/common_topbar_bg_color">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="您尚未完成实名认证，点击去实名"
                android:textColor="@color/orange_text"
                android:textSize="@dimen/common_measure_18dp"/>

            <ImageView
                android:id="@+id/my_account_personal_x_img"
                android:layout_width="@dimen/common_measure_18dp"
                android:layout_height="@dimen/common_measure_18dp"
                android:scaleType="fitCenter"
                android:src="@drawable/my_account_personal_x_logo"/>

        </LinearLayout>

        <!--员工专属产品-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_220dp"
            android:layout_marginTop="@dimen/common_measure_5dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/my_account_personal_zscp_layout_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@drawable/my_account_personal_zscp_layout_logo"/>

            <LinearLayout
                android:id="@+id/my_account_personal_zscp_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_measure_20dp"
                android:layout_marginRight="@dimen/common_measure_20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_measure_30dp"
                    android:layout_marginTop="@dimen/common_measure_20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/common_measure_32dp"
                        android:layout_height="@dimen/common_measure_23dp"
                        android:src="@drawable/my_account_personal_zscp_huangguan_logo"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_measure_10dp"
                        android:layout_marginRight="@dimen/common_measure_20dp"
                        android:text="员工专属产品"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_measure_18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_measure_10dp"
                        android:layout_marginRight="@dimen/common_measure_20dp"
                        android:text="即投即满，次日起息"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_18dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.5"
                        android:textSize="@dimen/common_measure_30dp"
                        android:textColor="@color/orange_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%～"
                        android:textSize="@dimen/common_measure_18dp"
                        android:textColor="@color/orange_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.5"
                        android:textSize="@dimen/common_measure_30dp"
                        android:textColor="@color/orange_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="%"
                        android:textSize="@dimen/common_measure_18dp"
                        android:textColor="@color/orange_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="92"
                        android:textSize="@dimen/common_measure_18dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天～"
                        android:textSize="@dimen/common_measure_16dp"
                        android:textColor="@color/gray1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="365"
                        android:textSize="@dimen/common_measure_18dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textSize="@dimen/common_measure_16dp"
                        android:textColor="@color/gray1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="预期年化收益率"
                        android:textSize="@dimen/common_measure_16dp"
                        android:textColor="@color/gray1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资期限"
                        android:textSize="@dimen/common_measure_16dp"
                        android:textColor="@color/gray1"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_measure_1dp"
                    android:layout_marginTop="@dimen/common_measure_10dp"
                    android:background="@color/edittext_line_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1万起投"
                        android:textSize="@dimen/common_measure_20dp"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/my_account_personal_zscp_yy_btn"
                        android:layout_width="@dimen/common_measure_80dp"
                        android:layout_height="@dimen/common_measure_30dp"
                        android:background="@drawable/style_rect_fillet_orange"
                        android:gravity="center"
                        android:text="预约"
                        android:textSize="@dimen/common_measure_16dp"
                        android:textColor="@color/orange_text"/>

                    <Button
                        android:id="@+id/my_account_personal_zscp_invest_btn"
                        android:layout_width="@dimen/common_measure_80dp"
                        android:layout_height="@dimen/common_measure_30dp"
                        android:background="@drawable/style_rect_fillet_orange"
                        android:gravity="center"
                        android:text="投资"
                        android:textSize="@dimen/common_measure_16dp"
                        android:textColor="@color/orange_text"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>