<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tyj_list_popupwindow_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:gravity="center"
        android:text="请选择体验金"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_measure_22dp"/>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_hint_color"/>
    
    <ListView 
        android:id="@+id/tyj_list_popupwindow_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/edittext_line_color"
        android:dividerHeight="@dimen/common_measure_1dp"
        android:layout_weight="1"/>

</LinearLayout>
